variant: fcos
version: 1.6.0
passwd:
  users:
    - name: root
      ssh_authorized_keys:
        - ssh-rsa  core
systemd:
  units:
    - name: serial-getty@ttyS0.service
      dropins:
        - name: autologin-core.conf
          contents: |
            [Service]
            # Clear the original ExecStart command
            ExecStart=
            # Set new command with autologin options
            ExecStart=-/usr/sbin/agetty --autologin core --noclear %I $TERM

    - name: getty@tty1.service
      dropins:
        - name: autologin-core.conf
          contents: |
            [Service]
            ExecStart=
            ExecStart=-/usr/sbin/agetty --autologin core --noclear %I $TERM
    - name: k3s.service
      enabled: true
